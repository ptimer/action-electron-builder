{
  "name": "pale-cent-stamp-da63p",
  "productName": "pale-cent-stamp-da63p",
  "description": "My Electron application description",
  "keywords": [],
  "main": "./main.js",
  "version": "1.5.0",
  "author": "Illiab",
  "license": "CC0-1.0",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder"
  },
  "devDependencies": {
    "electron": "13.1.7",
    "electron-builder": "^22.14.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptimer/action-electron-builder.git"
  },
  "build": {
    "appId": "io.companyname.test",
    "productName": "test",
    "files": [
      "dist/**/*.{js,css,html,ttf}"
    ],
    "directories": {
      "buildResources": "./"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "hardenedRuntime": true,
      "entitlementsInherit": "build/entitlements.mac.inherit-plist"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": false,
      "category": "Development"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": false
    },
    "publish": {
      "provider": "github",
      "repo": "https://github.com/ptimer/action-electron-builder.git",
      "owner": "ptimer",
      "releaseType": "release"
    }
  }
}
